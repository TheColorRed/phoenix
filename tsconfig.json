{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "strict": true,
    "sourceMap": true,
    "outFile": "./dist/phoenix.js",
    "removeComments": true,
    "allowJs": true,
    "newLine": "LF"
    // "listFiles": true
  },
  "include": [
    "node_modules/pixi.js/dist/pixi.min.js",
    "node_modules/matter-js/build/matter.min.js"
  ],
  "files": [
    // Import the utilities
    "./src/util/Object.ts",
    "./src/util/Clamp.ts",
    "./src/util/Component.ts",
    "./src/util/GameObject.ts",
    "./src/util/Collider.ts",
    "./src/util/Sprite.ts",
    "./src/util/Vector2.ts",
    "./src/util/input/Button.ts",
    "./src/util/input/Input.ts",
    "./src/util/input/Key.ts",
    "./src/util/input/Keyboard.ts",
    "./src/util/input/Mouse.ts",
    // Import the components
    "./src/components/RectangleCollider.ts",
    "./src/components/Rigidbody.ts",
    "./src/components/Transform.ts",
    // Import the main game
    "./src/Game.ts"
  ]
}